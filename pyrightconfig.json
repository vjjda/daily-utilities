// Path: pyrightconfig.json
{
  // 1. Cấu hình môi trường thực thi để Pyright hiểu PYTHONPATH
  "executionEnvironments": [
    {
      "root": ".",
      "pythonVersion": "3.14", // Hoặc phiên bản Python bạn đang sử dụng

      // Khai báo các thư mục nên được coi là thư viện cấp cao nhất (top-level packages)
      "extraPaths": ["modules", "utils", "scripts"]
    }
  ],

  // Chuyển sang "basic"
  "typeCheckingMode": "basic",

  // 3. Xử lý các lỗi liên quan đến Dynamic Import và Lỗi Type
  "reportUnknownArgumentType": "none",
  "reportUnknownMemberType": "none",
  "reportUnusedImport": "none",
  "reportUnsupportedDunderAll": "none",
  "reportPossiblyUnboundVariable": "none",
  "reportUnknownVariableType": "none",
  
  // --- NEW: Tắt cảnh báo "Variable not allowed in type expression" ---
  "reportInvalidTypeForm": "none",
  // --- END NEW ---

  // Tùy chọn: Thêm các thư mục cần kiểm tra
  "include": ["utils", "modules", "scripts"],
  "exclude": [
    "**/__pycache__",
    "**/.venv",
    "**/venv",
    "**/node_modules",
    "/scripts/internal/bootstrap_templates/*"
  ]
}